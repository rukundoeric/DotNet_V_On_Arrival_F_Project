# Copy this file to .env and fill in your actual credentials
# IMPORTANT: Never commit .env file to Git (it's in .gitignore)

# Database Configuration
DATABASE_URL=your-database-connection-string

# Email Provider Configuration
# Set to "GMAIL" or "MAILTRAP"
EMAIL_PROVIDER=GMAIL

# Gmail Configuration (used when EMAIL_PROVIDER=GMAIL)
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_USERNAME=your-email@gmail.com
GMAIL_PASSWORD=your-app-password-here
GMAIL_FROM_EMAIL=your-email@gmail.com
GMAIL_FROM_NAME=Rwanda Immigration Services

# Mailtrap Configuration (used when EMAIL_PROVIDER=MAILTRAP)
MAILTRAP_SMTP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_SMTP_PORT=2525
MAILTRAP_USERNAME=your-mailtrap-username
MAILTRAP_PASSWORD=your-mailtrap-password
MAILTRAP_FROM_EMAIL=noreply@visaonarrival.rw
MAILTRAP_FROM_NAME=Rwanda Immigration Services

# Frontend URL for links in emails
FRONTEND_URL=http://localhost:3000
